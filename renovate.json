{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "next",
      "matchPackageNames": [
        "next",
        "next-auth",
        "next-transpile-modules",
        "next-{/,}**"
      ]
    },
    {
      "groupName": "auth",
      "matchPackageNames": [
        "@auth/{/,}**"
      ]
    },
    {
      "groupName": "map",
      "matchPackageNames": [
        "react-map-gl",
        "maplibre-gl",
        "pmtiles"
      ]
    },
    {
      "groupName": "langchain",
      "matchPackageNames": [
        "@langchain/community",
        "@langchain/core",
        "@langchain/openai",
        "@langchain/ollama",
        "langchain",
        "@langchain/{/,}**"
      ]
    },
    {
      "groupName": "codemirror",
      "matchPackageNames": [
        "@uiw/codemirror-extensions-color",
        "@uiw/codemirror-theme-vscode",
        "@uiw/react-codemirror",
        "@codemirror/{/,}**"
      ]
    },
    {
      "groupName": "react",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": [
        "@types/eslint",
        "babel-eslint",
        "@typescript-eslint/{/,}**",
        "eslint{/,}**"
      ]
    }
  ]
}
