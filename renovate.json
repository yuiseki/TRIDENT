{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "groupName": "next",
      "matchPackageNames": ["next", "next-auth", "next-transpile-modules", "@ducanh2912/next-pwa"],
      "matchPackagePrefixes": ["next-"]
    },
    {
      "groupName": "map",
      "matchPackageNames": ["react-map-gl", "maplibre-gl", "pmtiles"]
    },
    {
      "groupName": "langchain",
      "matchPackageNames": ["@langchain/community", "@langchain/core", "@langchain/openai", "@langchain/ollama", "langchain"],
      "matchPackagePrefixes": ["@langchain/"]
    },
    {
      "groupName": "codemirror",
      "matchPackageNames": ["@uiw/codemirror-extensions-color", "@uiw/codemirror-theme-vscode", "@uiw/react-codemirror"],
      "matchPackagePrefixes": ["@codemirror/"]
    },
    {
      "groupName": "react",
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": ["@types/eslint", "babel-eslint"],
      "matchPackagePrefixes": ["@typescript-eslint/", "eslint"]
    }
  ]
}
